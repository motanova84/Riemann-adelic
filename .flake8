[flake8]
max-line-length = 120
extend-ignore = E203, E501, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    venv,
    env,
    .tox,
    logs,
    data,
    zeros,
    .qcal_beacon,
    notebooks,
    formalization,
    docs
per-file-ignores =
    __init__.py:F401
    noesis_guardian/guardian_core.py:E402
